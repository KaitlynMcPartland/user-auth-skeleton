<div class="user_show_body"><br>

    <div class="well well-sm"> <h3><%= current_user.name %>'s Profile</h3><br> </div>
    <% current_user.decks.uniq.each do |deck| %>

      <div class="col-md-4">
        <div class="panel panel-primary">
         <div class="panel-heading"> <%= deck.name %></div>
           <div class="panel-body">
          <table class="table">
          <tr>
            <th>Date</th>
            <th>Cards in Deck</th>
            <th>First Guess Correct</th>
            <th>Total Guesses</th>
          </tr>
      <% deck.rounds.where(user_id: @current_user.id).each do |round| %>
        <tr>
          <td><%= round.created_at %></td>
          <td><%= deck.cards.count %></td>
          <td><%= round.correct_on_first_try %></td>
          <td><%= round.total_guesses %></td>
        </tr>
      <% end %>
        </table>
        </div>
        </div>
      </div>
    <% end %>
