<h3><%= @current_deck.name %></h3>

<form id="card_viewer" action="/decks/<%= @current_deck.id %>/cards/<%= @current_card.id %>" method="get">
  <p><%= @current_card.question %></p>

  <label for="user_guess">Your guess here:</label>
  <input type="text" name="user_guess"><br>

  <input type="submit" value="Submit">
</form>

<% if @result_response %>
  <p><%= @result_response %></p>
  <% if session[:round_info][:card_ids_in_play].length == 0 %>
  <a href="/rounds/show">Show Results</a>
  <% else %>
  <a href="/decks/<%=@current_deck.id%>/cards/<%=session[:round_info][:card_ids_in_play].sample%>">Next Card</a>
  <% end %>
<% end %>

